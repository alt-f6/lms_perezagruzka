<%- include("../partials/shell-open", { title: "Student created" }) %>

<div class="max-w-md">
  <h1 class="text-2xl font-semibold">Student created</h1>
  <p class="mt-1 text-sm text-slate-400">Account is ready. Share credentials with the student.</p>

  <div class="mt-6 rounded-2xl border border-slate-800 bg-slate-950/40 p-4">
    <div class="text-sm text-slate-400">Email</div>
    <div class="mt-1 font-medium"><%= user.email %></div>

    <div class="mt-4 text-sm text-slate-400">Role</div>
    <div class="mt-1 font-medium"><%= user.role %></div>

    <div class="mt-4 text-sm text-slate-400">Name</div>
    <div class="mt-1 font-medium"><%= user.name || "-" %></div>
  </div>

  <div class="mt-6 flex gap-2">
    <a href="/admin/users/new" class="rounded-xl border border-slate-700 px-4 py-2 text-sm text-slate-200 hover:bg-slate-900">
      Create another
    </a>
    <a href="/admin/users" class="rounded-xl bg-slate-100 px-4 py-2 text-sm font-medium text-slate-900 hover:bg-white">
      Back to users
    </a>
  </div>
</div>

<%- include("../partials/shell-close") %>
