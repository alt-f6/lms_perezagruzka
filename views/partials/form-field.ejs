<div class="space-y-1">
  <label for="<%= id %>" class="block text-sm text-slate-300"><%= label %></label>

  <input
    id="<%= id %>"
    name="<%= name %>"
    type="<%= type || 'text' %>"
    value="<%= value || '' %>"
    <%= required ? 'required' : '' %>
    autocomplete="<%= autocomplete || '' %>"
    placeholder="<%= placeholder || '' %>"
    class="w-full rounded-xl border px-3 py-2 outline-none transition
      <%= error
        ? 'border-red-500/60 bg-red-500/5 focus:border-red-400'
        : 'border-slate-700 bg-slate-900/40 focus:border-slate-400'
      %>"
  />

  <% if (error) { %>
    <p class="text-sm text-red-200"><%= error %></p>
  <% } %>
</div>
