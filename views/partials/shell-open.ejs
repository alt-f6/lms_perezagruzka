<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/public/styles.css" rel="stylesheet" />
  </head>

  <%
    const path = typeof currentPath === "string" ? currentPath : "";
    const linkClass = (startsWith) =>
      path.startsWith(startsWith)
        ? "text-white"
        : "text-slate-400 hover:text-slate-200";
  %>

  <body class="min-h-screen bg-slate-950 text-slate-100">
    <header class="border-b border-slate-800 bg-slate-950/80 backdrop-blur">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3">
        <!-- Left: logo / title -->
        <div class="flex items-center gap-6">
          <a href="/" class="text-lg font-semibold tracking-tight">
            LMS
          </a>

          <% if (locals.user) { %>
            <nav class="flex items-center gap-4 text-sm">
              <% if (locals.user.role === "admin") { %>
                <a
                  href="/admin/dashboard"
                  class="<%= linkClass('/admin/dashboard') %>"
                >
                  Dashboard
                </a>

                <a
                  href="/admin/users"
                  class="<%= linkClass('/admin/users') %>"
                >
                  Users
                </a>

                <a
                  href="/admin/lessons"
                  class="<%= linkClass('/admin/lessons') %>"
                >
                  Lessons
                </a>
              <% } %>

              <% if (locals.user.role === "student") { %>
                <a
                  href="/student/dashboard"
                  class="<%= linkClass('/student/dashboard') %>"
                >
                  Dashboard
                </a>
              <% } %>
            </nav>
          <% } %>
        </div>

        <% if (locals.user) { %>
          <div class="flex items-center gap-4 text-sm">
            <div class="text-slate-400">
              <%= locals.user.name || locals.user.email %>
            </div>

            <form method="POST" action="/logout">
              <button
                type="submit"
                class="rounded-lg border border-slate-700 px-3 py-1.5 text-slate-300 hover:bg-slate-900"
              >
                Logout
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </header>

    <main class="mx-auto w-full max-w-6xl px-4 py-8">
