<header class="border-b border-slate-800 bg-slate-950/70 backdrop-blur">
  <div class="mx-auto flex max-w-5xl items-center justify-between px-4 py-3">
    <a href="/" class="font-semibold tracking-tight">LMS</a>

    <div class="flex items-center gap-3 text-sm">
      <% if (user) { %>
        <span class="text-slate-300">
          <span class="text-slate-400">Signed in as</span>
          <span class="font-medium text-slate-100"><%= user.email %></span>
          <span class="ml-2 rounded-full bg-slate-800 px-2 py-0.5 text-xs text-slate-200"><%= user.role %></span>
        </span>

        <form method="POST" action="/logout">
          <button type="submit" class="rounded-lg bg-slate-100 px-3 py-1.5 text-slate-900 hover:bg-white">
            Logout
          </button>
        </form>
      <% } else { %>
        <a href="/login" class="rounded-lg border border-slate-700 px-3 py-1.5 hover:bg-slate-900">
          Login
        </a>
      <% } %>
    </div>
  </div>
</header>
